}
.popWrap_detailBox text{
	font-size: 25rpx;
	margin: 8rpx 15rpx 0 20rpx;
	font-weight: 700;
}
.popWrap_detailBox image{
	width: 30rpx;
	height: 30rpx;
	padding: 10rpx;
	border-radius: 50%;
	background: rgba(255,255,255,0.4);
}
