#mapp {
	height: 100%; 
	width: 100%;
}
.popWrap{
	border-radius: 40rpx 40rpx 0 0;
}
.popWrap_title{
	margin: 20rpx 0 0 24rpx;
	font-size: 30rpx;
	font-weight: 800;
	width: 450rpx;
	height: auto;
  white-space: normal !important;
  word-break: break-all;
}
.popWrap_title image{
	margin-top: -4rpx;
	position: absolute;
	width: 48rpx;
	height: 48rpx;
}
.popWrap_title text{
	margin-left: 60rpx;

}
.popWrap_detail{
	display: inline-block;
}
.popWrap_detailBox{
	display: inline-flex;
	border-radius: 50rpx;
	background: #EEF1F4;
	padding: 10rpx;
	margin: 50rpx 0 0 15rpx;
}
.walk_bg{
	background: rgba(200,158,196,0.2);
	color: #C89EC4;
}
.time_bg{
	background: rgba(132,177,237,0.2);
