page{
  background: #F4F6F7;
}
.safeBox{
  height: env(safe-area-inset-bottom);
  padding-bottom: 30rpx;
}
.newsBox{
  margin: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 0;
}
.newsBox_title{
  color: rgba(0, 0, 0, 1.0);
  font-weight: 700;
  letter-spacing: 3rpx;
  font-size: 30rpx;
  padding: 0 30rpx;
}
.newsBox_time{
  margin-top: 5rpx;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.6);
  letter-spacing: 1rpx;
  padding: 0 30rpx;
}
.newsBox_content{
  margin-top: 20rpx;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.8);
  letter-spacing: 2rpx;
  font-weight: 700;
  padding: 0 30rpx;
}
.helpBox{
  margin-top: 60rpx;
  font-weight: 700;
}
.helpBox_notice{
  color: rgba(0, 0, 0, 1.0);
  font-weight: 700;
  letter-spacing: 3rpx;
  font-size: 30rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}
.helpLink{
  color: #10AEFF;
}
