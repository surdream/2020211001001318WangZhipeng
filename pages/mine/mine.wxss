page{
  background: #F8F5F8;
}
.background{
  position: absolute;
  background: #B6B6B6;
  z-index: -1;
  height: 50%;
  width: 100%;
}
.topWrap{
  display: inline-flex;
}
.topWrap_avatar{
  border-radius: 50%;
  border: 4rpx solid #EFEFEF;
  width: 100rpx;
  height: 100rpx;
  margin: 50rpx 0 0 125rpx;
  box-shadow:  0rpx 0rpx 12rpx gray;
}
.avatarSex{
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  margin: 50rpx 0 0 200rpx;
  border-radius: 50%;
  background: #EFEFEF;
  border: 4rpx solid #fff;
}
.topWrap_openname{
  position: absolute;
  margin: 60rpx 0 0 250rpx;
  color: rgba(255, 255, 255, 1.0);
  font-weight: 800;
  font-size: 28rpx;
}
.idInfo{
  color: rgba(255, 255, 255, 0.75);
  font-size: 26rpx;
}
.topWrap_detail{
  position: absolute;
  margin: 100rpx 0 0 250rpx;
  color: rgba(255, 255, 255, 0.75);
  font-weight: 700;
  font-size: 26rpx;
  width: 500rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.mainContent{
  background: linear-gradient(180deg,#fff 0%,#F8F5F8 75%);
  border-radius: 72rpx 72rpx 0 0;
  height: 1200rpx;
  margin-top: 50rpx;
  overflow: scroll;
}
.alterBar{
  margin: 50rpx 5% 0;
  width: 90%;
  height: 120rpx;
  text-align: center;
  border-radius: 16rpx;
  box-shadow:  8rpx 8rpx 16rpx #d4d8d9,
  -8rpx -8rpx 16rpx #ecf0f1;
}
.alterBox{
  padding: 20rpx 80rpx;
  margin: 20rpx 0;
  display: inline-flex;
}
.alterBox_border{
  border-right: 1rpx solid #ecf0f1;
}
.alterBox_img{
  width: 40rpx;
  height: 40rpx;
}
.alterBox_text{
  font-weight: 800;
  font-size: 28rpx;
  color: #4CD9BD;
  margin: 0 0 0 20rpx;
}
.midWrap{
  width: 90%;
  margin: 36rpx 5%;
  border-radius: 16rpx;
  box-shadow:  6rpx 6rpx 12rpx #d4d8d9,
  -6rpx -6rpx 12rpx #ecf0f1;
}
.usefulBox{
  padding: 25rpx;
}
.usefulBox_img{
  width: 40rpx;
  height: 40rpx;
}
.usefulBox_text{
  position: absolute;
  margin-left: 20rpx;
  color: rgba(0, 0, 0, 0.75);
  font-size: 26rpx;
}
.usefulBox_arrow{
  position: absolute;
  right: 6%;
  width: 40rpx;
  height: 40rpx;
}
.aboutWrap{
  border-radius: 16rpx;
  width: 90%;
  margin-left: 5%;
  box-shadow:  6rpx 6rpx 12rpx #d4d8d9,
  -6rpx -6rpx 12rpx #ecf0f1;
}
.aboutLink{
  border-radius: 16rpx;
}
.supportBtn{
  position: absolute;
  opacity: 0;
  width: 45%;
  margin-top: 163rpx;
  z-index: 999;
  height: 163rpx;
}