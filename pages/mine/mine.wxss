page{
  background: #F5F5F5;
}
.topWrap{
  padding-bottom: 50rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.topWrap_avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.topWrap_sex{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  margin: -200rpx 0 0 100rpx;
  border-radius: 50%;
  background: #F5F5F5;
  border: 5rpx solid #fff;
  padding: 5rpx;
}
.topWrap_title{
  margin-top: 20rpx;
  font-size: 32rpx;
  font-weight: 700;
}
.topWrap_notice{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(0,0,0,0.6);
}
.optionBox{
  width: 85%;
  margin: 45rpx auto;
  background: #fff;
  border-radius: 25rpx;
}
.optionBox_item{
  width: 100%;
  padding: 25rpx 15rpx;
}
.optionBox_item image{
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-right: 30rpx;
}
.optionBox_item text{
  margin-left: 15rpx;
}
.optionBox_border{
  width: 90%;
  margin: 0 auto;
  border-bottom: 1rpx solid rgba(0,0,0,0.04);
}
.supportBtn{
  position: absolute;
  width: 92%;
  height: 88rpx;
  border-radius: 25rpx 25rpx 0 0;
  opacity: 0;
}
.navApp{
  border-radius: 20rpx;
  height: 40rpx;
}