page{
  background: #F5F5F5;
}
.optionBox{
  width: 88%;
  margin: 0 auto 80rpx;
  background: #fff;
  border-radius: 25rpx;
}
.optionBox_avatar{
  padding: 25rpx 15rpx;
  height: 125rpx;
}
.optionBox_avatar image{
  float: right;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 10rpx 16rpx 0 0;
}
.optionBox_avatar text{
  margin: 42rpx 0 0 15rpx;
  position: absolute;
}
.optionBox_item{
  padding: 25rpx 15rpx;
}
.optionBox_item image{
  width: 38rpx;
  height: 38rpx;
  float: right;
}
.optionBox_item text{
  margin-left: 15rpx;
  line-height: 40rpx;
}
.optionBox_border{
  width: 90%;
  margin: 0 auto;
  border-bottom: 1rpx solid rgba(0,0,0,0.04);
}
.nickName{
  float: right;
  color: rgba(0,0,0,0.5);
}
.signOut{
  position: absolute;
  bottom: 0;
  text-align: center;
  width: 100%;
  font-size: 22rpx;
  color: rgba(0,0,0,0.20);
  letter-spacing: 1rpx;
}
.nameSetWrap{
  background: #F5F5F5;
  height: 40%;
}
.nameSetWrap{
  padding: 30rpx;
}
.nameSetWrap_title{
  background: linear-gradient(to right, #339966, #099970);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  font-size: 35rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
  margin-left: 9rpx;
}
.nameSetWrap_subTitle{
  background: linear-gradient(to right, #339966, #099970);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  margin: 4rpx 0 36rpx 0;
  font-size: 26rpx;
  margin-left: 9rpx;
}
.nameSetWrap_input{
  border: solid 5rpx #099970;
  border-radius: 20rpx;
}
.nameSetWrap_btn{
  margin-top: 25rpx;
  border-radius: 16rpx;
  width: 100%;
  background: #099970;
  text-align: center;
  padding: 20rpx 0;
  letter-spacing: 1rpx;
  font-weight: 700;
  color: #F5F5F5;
}