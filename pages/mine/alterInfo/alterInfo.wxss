page{
  background: #B6B6B6;
}
.topWrap{
  display: inline-flex;
}
.topWrap_avatar{
  border-radius: 50%;
  border: 4rpx solid #EFEFEF;
  width: 100rpx;
  height: 100rpx;
  margin: 50rpx 0 0 25rpx;
  box-shadow:  0rpx 0rpx 12rpx gray;
}
.avatarSex{
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  margin: 50rpx 0 0 100rpx;
  border-radius: 50%;
  background: #EFEFEF;
  border: 4rpx solid #fff;
}
.topWrap_openname{
  position: absolute;
  margin: 60rpx 0 0 150rpx;
  color: rgba(255, 255, 255, 1.0);
  font-weight: 800;
  font-size: 28rpx;
}
.topWrap_detail{
  position: absolute;
  margin: 100rpx 0 0 150rpx;
  color: rgba(255, 255, 255, 0.75);
  font-weight: 700;
  font-size: 26rpx;
}
.topWrap_update{
  display: inline-flex;
  position: absolute;
  margin-top: 100rpx;
  right: 32rpx;
  color: rgba(255, 255, 255, 0.75);
  font-weight: 800;
  font-size: 24rpx;
}
.topWrap_update image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 4rpx;
}
.mainContent{
  background: linear-gradient(180deg,#fff 0%,#EFEFEF 80%);
  border-radius: 60rpx 60rpx 0 0;
  height: 1500rpx;
  margin-top: 50rpx;
  padding-top: 25rpx;
}
.inputBox{
  width: 90%;
  margin: 0 5%;
  border-bottom: 1rpx solid #B6B6B6;
  padding: 25rpx 0;
  font-weight: 800;
}
.inputBox_detail{
  font-weight: 500;
  color: rgba(0, 0, 0, 0.5);
}
.cancelBtn{
  text-align: center;
  font-weight: 700;
  font-size: 24rpx;
  position: fixed;
  bottom: 48rpx;
  padding: 25rpx 0;
  width: 40%;
  margin-left: 30%;
  border-radius: 40rpx;
  background: #B6B6B6;
  color: rgba(0, 0, 0, 0.5);
}