page{
    background: #F5F5F5;
}
.topWrap{
    padding-top: 30rpx;
    height: 360rpx;
    border-bottom: 1px solid rgba(0,0,0,0.05);
}
.topWrap_avatar{
    width: 120rpx;
    height: 120rpx;
    margin-left: 35rpx;
    border-radius: 50%;
}
.topWrap_sex{
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    margin: 5rpx 0 0 120rpx;
    border-radius: 50%;
    background: #F5F5F5;
    border: 2rpx solid #fff;
    padding: 3rpx;
}
.topWrap_edit{
    margin-top: 45rpx;
    right: 35rpx;
    position: absolute;
    padding: 0 15rpx;
    height: 40rpx;
    font-size: 24rpx;
    border-radius: 18rpx;
    color: rgba(0,0,0,0.6);
    border: 1rpx solid rgba(0,0,0,0.2);
    line-height: 40rpx;
}
.topWrap_name{
    font-size: 30rpx;
    font-weight: 800;
    margin: 20rpx 0 0 35rpx;
}
.topWrap_class{
    font-size: 26rpx;
    color: rgba(0,0,0,0.6);
    margin: 5rpx 0 0 35rpx;
}
.topWrap_id{
    font-size: 26rpx;
    margin: 30rpx 0 0 35rpx;
}
.topWrap_id text{
    color: rgba(0,0,0,0.6);
}

.infoScroll{
    padding: 0 35rpx;
    height: 80rpx;
    white-space: nowrap;
    padding-top: 20rpx;
    background: #F5F5F5;
}
.infoTitle{
    border-radius: 60rpx;
    padding: 0 25rpx;
    height: 60rpx;
    font-size: 28rpx;
    margin-right: 10rpx;
    display: inline-flex;
    line-height: 60rpx;
    font-weight: 700;
}
.not_selected{
    border: 1rpx solid rgba(0,0,0,0.2);
    color: rgba(0,0,0,0.8);
    background: #F5F5F5;
}
.has_selected{
    color: #F5F5F5;
    border: 1rpx solid #25262C;
    background: #25262C;
}

.QAWrap{
    width: 680rpx;
    margin-left: 35rpx;
    border-radius: 25rpx;
}
.QAWrap_count{
  margin: 30rpx 2rpx;
  color: rgba(0, 0, 0, 0.6);
}
.QABox{
  margin: 18rpx auto;
  border-radius: 25rpx;
  box-shadow: 3rpx 3rpx 6rpx #d4d8d9,
              -3rpx -3rpx 6rpx #ecf0f1;
}
.QABox_noData{
  text-align: center;
  letter-spacing: 2rpx;
  margin-top: 100rpx;
  color: rgba(0, 0, 0, 0.4);
  font-weight: 700;
  font-size: 26rpx;
}
.QABoxTop{
  border-radius: 25rpx 25rpx 0 0;
  background: linear-gradient(120deg, var(--background--) 0%,#fff 120%);
}
.QABoxTop_title{
  padding: 28rpx 0;
  color: rgba(255,255,255,0.95);
  font-weight: 700;
  letter-spacing: 1rpx;
  margin-left: 30rpx;
  font-size: 32rpx;
}
.QABoxData{
  position: absolute;
  right: 60rpx;
  margin-top: 32rpx;
  background: rgba(0,0,0,0.2);
  border-radius: 50rpx;
  display: inline-flex;
}
.QABoxData image{
  padding: 6rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}
.QABoxData text{
  font-size: 20rpx;
  color: rgba(255,255,255,0.9);
  line-height: 36rpx;
  padding: 0 12rpx;
}
.QABoxContent{
  background: #fff;
  border-radius: 0 0 25rpx 25rpx;
  padding: 0 25rpx;
}
.QABoxContent_topBar{
  padding: 30rpx 0;
  height: 60rpx;
}
.QABoxContent_name{
  display: inline-flex;
  font-weight: 700;
  position: absolute;
  margin: 0 0 0 75rpx;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.8);
}
.QABoxContent_nameTxt{
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.QABoxContent_from{
  font-weight: 500;
  margin: 0 0 0 12rpx;
  border-radius: 50rpx;
  padding: 0 8rpx;
  font-size: 20rpx;
}
.QABoxContent_count{
  position: absolute;
  margin: 37rpx 0 0 75rpx;
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.4);
}
.QABoxContent_avatar{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  letter-spacing: 1rpx;
}
.QABoxContent_title{
  font-weight: 700;
  font-size: 30rpx;
  letter-spacing: 1rpx;
  padding-bottom: 25rpx;
}
.contentWrap_imgBox{
  display: inline-flex;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
  padding-bottom: 10rpx;
}
.contentWrap_img{
  margin-right: 20rpx;
  width: 300rpx;
  border-radius: 25rpx;
}
.QABoxInfo{
  padding: 40rpx 0 6rpx 0;
  width: 100%;
  display: inline-block;
}
.QABoxInfo image{
  width: 40rpx;
  height: 40rpx;
  opacity: 0.8;
  box-shadow: #fff 0px 0px 1rpx 1rpx inset;
  border-radius: 50%;
}
.QABoxInfo_enterBtn{
  position: absolute;
  margin-top: -16rpx;
  right: 60rpx;
  padding: 15rpx 30rpx;
  border-radius: 60rpx;
  font-weight: 700;
  font-size: 24rpx;
  color: rgba(255,255,255,0.95);
}
.QABoxInfoBox{
  display: inline-block;
  margin-bottom: 15rpx;
}
.QABoxInfo_flip{
  margin: 0 36rpx;
}
.QABoxInfoBox text{
  position: absolute;
  line-height: 45rpx;
  margin-left: 6rpx;
  color: #707070;
}