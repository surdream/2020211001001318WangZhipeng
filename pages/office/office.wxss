@import "./office.skeleton.wxss";
page{
  background: #F8F5F8;
}
.courentWeek{
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.8);
}
.topWrap{
  height: 90rpx;
}
.topSchImg{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 30rpx;
  border-radius: 50%;
}
.topTitle{
  font-weight: 900;
  font-size: 42rpx;
  position: absolute;
  margin: 15rpx 0 0 30rpx;
}
.course_list{
  width: 100%;
  margin: 20rpx 0 0 5rpx;
  height: 156rpx;
  display: inline-flex;
  border-radius: 25rpx;
}
.courseBox{
  margin-left: 25rpx;
  height: 152rpx;
  width: 215rpx;
  display: inline-flex;
  border-radius: 25rpx;
}
.courseBox_title{
  color: rgba(0, 0, 0, 0.8);
  font-weight: 700; 
  font-size: 20rpx;
  margin: 72rpx 0 0 15rpx;
  position: absolute;
  width: 200rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.courseBox_class{
  color: rgba(0, 0, 0, 0.8);
  font-weight: 700; 
  font-size: 20rpx;
  margin: 100rpx 0 0 15rpx;
  position: absolute;
  width: 200rpx;
  height: auto;
  white-space: normal !important;
  word-break: break-all;
}
.courseBox_microNum{
  color: rgba(0, 0, 0, 1.0);
  font-weight: 900;
  font-size: 28rpx;
  margin: 20rpx 0 0 16rpx;
  position: absolute;
}
.usefulWrap{
  margin: 18rpx 0 0 30rpx;
}
.usefulWrap_box{
  display: inline-block;
  text-align: center;
  margin-right: 60rpx;
  height: 150rpx;
}
.usefulWrap_icon{
  width: 72rpx;
  height: 72rpx;
  padding: 28rpx;
  background-color: #FEA82C;
  border-radius: 25rpx;
}
.usefulWrap_text{
  font-size: 25rpx;
  font-weight: 800;
}
.infoWrap{
  margin-top: 10rpx;
}
.infoControlBar{
  height: 120rpx;
  width: 100%;
}
.infoControlBar_img{
  margin: 25rpx 0 0 30rpx;
  padding: 15rpx 15rpx;
  border-radius: 50%;
  position: absolute;
  width: 50rpx;
  height: 50rpx;
}
.infoControlBar_title{
  position: absolute;
  margin: 26rpx 0 0 130rpx;
  font-weight: 800;
  font-size: 28rpx;
}
.infoControlBar_detail{
  position: absolute;
  margin: 62rpx 0 0 130rpx;
  font-weight: 700;
  font-size: 25rpx;
  color: rgba(0, 0, 0, 0.6);
}
.switchBtn{
  position: absolute;
  margin: 26rpx 0 0 0;
  padding: 10rpx 14rpx 14rpx 14rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 700;
  border: 4rpx solid #80B7F9;
  box-shadow:  0rpx 0rpx 6rpx #B7D3F4;
}
.bfBtn{
  right: 150rpx;
}
.afBtn{
  right: 30rpx;
}
.infoControlBar_picker{
  position: absolute;
  right: 30rpx;
  margin: 26rpx 0 0 0;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 700;
  border: 4rpx solid #80B7F9;
  box-shadow:  0rpx 0rpx 6rpx #B7D3F4;
}
.pickerImg{
  margin: 6rpx 0 0 0;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 20rpx;
}
.picker{
  width: 216rpx;
  padding: 10rpx 0rpx 14rpx 14rpx;
}
.infoBar{
  margin-left: 30rpx;
  display: inline-flex;
}
.infoListTitleUnCheck{
  margin-right: 35rpx;
  font-weight: 800;
  font-size: 40rpx;
  color: rgba(0, 0, 0, 0.5);
}
.infoListTitleChecked{
  margin-right: 35rpx;
  font-weight: 800;
  font-size: 40rpx;
}
.infoListTitle_border{
  width: 60rpx;
  border-bottom: 8rpx solid #3E8BF8;
  margin: auto;
  margin-top: 8rpx;
  border-radius: 50rpx;
}
.infoListTitle_unBorder{
  width: 20rpx;
  border-bottom: 8rpx solid rgba(0, 0, 0, 0.25);
  margin: auto;
  margin-top: 8rpx;
  border-radius: 50rpx;
}
.infoBox{
  margin: 0 0 20rpx 20rpx;
  width: 650rpx;
  border-radius: 40rpx;
  background-color: rgba(255, 255, 255, 1.0);
  padding: 24rpx 30rpx;
  border-radius: 40rpx;
}
.infoBox_stick{
  position: absolute;
  width: 15rpx;
  height: 75rpx;
  border-radius: 50rpx;
}
.infoBox_notice{
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  margin-top: 5rpx;
  right: 45rpx;
}
.infoBox_top{
  margin: -8rpx 0 0 40rpx;
  font-weight: 800;
  font-size: 30rpx;
}
.infoBox_title{
  margin: 0rpx 0 0 40rpx;
  font-weight: 800;
  font-size: 28rpx;
}
.infoBox_detail{
  margin: 2rpx 0 0 40rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.75);
}
.infoBox_linkWrap{
  margin: 16rpx 0 0 48rpx;
}
.infoBox_linkBar{
  margin-left: -15rpx;
  display: inline-flex;
}
.infoBox_linkImg{
  display: inline-flex;
  border-radius: 50%;
  height: 50rpx;
  width: 50rpx;
}
.linkPlus{
  margin-left: -15rpx;
}
.linkPlus_text{
  position: absolute;
  font-weight: 800;
  font-size: 20rpx;
  margin: 12rpx 0 0 16rpx;
  color: rgba(0, 0, 0, 0.5);
}
.infoBox_linkText{
  display: inline-flex;
  font-weight: 800;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.5);
  position: absolute;
  margin: 8rpx 0 0 15rpx;
}
.defaultWrap{
  width: 100%;
  height: 100%;
  text-align: center
}
.defaultImg{
  width: 360rpx;
  height: 360rpx;
}
.defaultNotice{
  font-weight: 800;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.6);
}