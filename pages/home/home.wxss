page{
  background: #F4F7F7;
}
swiper{
  width: 92%;
  border-radius: 25rpx;
}
.topWrap{
  width: 100%;
  padding: 20rpx 4%;
}
.swiper-box{
  position: relative;
  border-radius: 25rpx;
  height: 250rpx;
}
.dots{
  width: 92%;
  position: absolute; 
  left: 0; 
  right: 0; 
  bottom: 8rpx; 
  display: flex; 
  justify-content: center; 
} 
.dots .dot{ 
  margin: 0 6rpx; 
  width: 14rpx; 
  height: 14rpx; 
  background: rgba(255, 255, 255, 0.6);
  border-radius: 6rpx; 
  transition: all .8s; 
} 
.dots .dot.active{ 
  width: 32rpx; 
  background: rgba(255, 255, 255, 0.8);
}
 
swiper image {
  width: 100%;
  height: 250rpx;
  border-radius: 25rpx;
}
.notice-box{
  margin-top: 15rpx;
  border-radius: 25rpx;
  width: 92%;
  color: rgba(86,229,190,0.1);
}
.midWrap{
  width: 98%;
  margin-left: 4%;
}
.useful-box{
  text-align: center;
  display: inline-block;
  height: 150rpx;
  width: 120rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.5);
  letter-spacing: 1rpx;
  margin-right: 24rpx;
}
.useful-box image{
  margin: 0 15rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.courseWrap{
  background: #fff;
  width: 92%;
  margin-left: 4%;
  margin-bottom: 20rpx;
  border-radius: 25rpx;
}
.switchBar{
  margin: 0 20rpx 10rpx 40rpx;
  display: inline-flex;
}
.switchBar image{
  position: absolute;
  width: 46rpx;
  height: 46rpx;
}
.msgDot{
  position: absolute;
  background: #F06D71;
  border: 3rpx solid #fff;
  width: 12rpx;
  height: 12rpx;
  margin: -3rpx 0 0 30rpx;
  border-radius: 50%;
}
.msgText{
  color: #F06D71;
}
.switchBar text{
  margin-left: 52rpx;
}
.infoListTitleUnCheck{
  margin-right: 20rpx;
  font-weight: 800;
  font-size: 34rpx;
  color: rgba(0, 0, 0, 0.4);
}
.infoListTitleChecked{
  margin-right: 20rpx;
  font-weight: 800;
  font-size: 34rpx;
}
/* 课程、留言模块 */
.infoBox{
  margin: 12rpx;
  border-radius: 25rpx;
  padding: 18rpx 25rpx;
  background: linear-gradient(90deg, var(--background--) 0%,#fff 100%);
}
.infoBox_time{
  position: absolute;
  right: 40rpx;
  margin-top: 24rpx;
  color: rgba(0, 0, 0, 0.6);
}
.infoBox_title{
  font-size: 30rpx;
  display: inline-flex;
  font-weight: 800;
  max-width: 480rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.infoBox_detail{
  font-size: 28rpx;
  margin-top: 8rpx;
  color: rgba(0, 0, 0, 0.8);
}
.courseStatus{
  padding: 6rpx 12rpx 0 12rpx;
  font-size: 18rpx;
  border-radius: 25rpx;
  color: rgba(255, 255, 255, 1.0);
  margin: 2rpx 0 0 6rpx;
}
.end{
  background: #7f9eb2;
}
.now{
  background: #3b8686;
}
.next{
  background: #2b90d9;
}
.remark{
  background: #f9c00c;
}
.writeBtn{
  text-align: center;
  padding: 10rpx 0;
  border-radius: 25rpx;
  font-weight: 800;
  font-size: 25rpx;
  background: rgba(240,109,113, 0.8);
  border: 15rpx solid rgba(240,109,113, 0.4);
  color: #fff;
}
.msgWrap{
  width: 92%;
  padding: 20rpx 2%;
  display: inline-flex;
  margin: 14rpx 2% 0 2%;
  border-radius: 25rpx;
  background: rgba(240,109,113, 0.25);
  box-shadow:  0rpx 0rpx 10rpx rgba(240,109,113, 0.5);
}
.msgWrap_detail{
  font-weight: 800;
  width: 500rpx;
  height: auto;
  white-space: normal !important;
  word-break: break-all;
  color: rgba(0, 0, 0, 0.6);
}
.msgWrap_time{
  font-size: 26rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.4);
  margin-top: 5rpx;
  position: absolute;
  right: 5%;
}
.viewAll{
  position: absolute;
  right: 48rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
}
.newsWrap{
  background: #fff;
  width: 92%;
  margin-left: 4%;
  border-radius: 25rpx;
}
.newsBox{
  width: 92%;
  margin: 5rpx auto;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.newsBox_title{
  font-size: 28rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.newsBox_detail{
  color: rgba(0, 0, 0, 0.5);
  font-size: 26rpx;
  margin-top: 8rpx;
}
.newsBox text{
  margin-left: 20rpx;
}
.popTitle{
  font-weight: 900;
  font-size: 30rpx;
  text-align: center;
  margin-top: 25rpx;
}
.popWrap{
  height: 100%;
  overflow: hidden;
}
.popTopBox{
  padding-top: 25rpx;
}
.popAvatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-left: 50rpx;
  box-shadow:  0rpx 0rpx 10rpx gray;
}
.popBtn{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  padding: 25rpx;
  margin-top: 25rpx;
}
.acceptBtn{
  background: rgba(30, 144, 255,0.25);
  right: 50rpx;
}
.refuseBtn{
  background: rgba(255, 165, 2,0.25);
  right: 175rpx;
}
.popInfo{
  padding: 0 50rpx;
  color: rgba(0, 0, 0, 0.75);
}
.popInfo_title{
  font-weight: 800;
  font-size: 28rpx;
  margin-top: 25rpx;
}
.popInfo_detail{
  font-size: 26rpx;
  margin-top: 5rpx;
  font-weight: 800;
}
.popInfo_detail text{
  color: rgba(0, 0, 0, 0.5);
  font-weight: 500;
}
.popLink{
  background: rgba(30, 144, 255,0.2);
  border-radius: 25rpx;
  width: 88%;
  margin: 25rpx 6%;
  padding: 5rpx 0;
}
.popLink text{
  position: absolute;
  margin: 21rpx 0 0 25rpx;
  font-size: 26rpx;
  font-weight: 800;
  color: rgba(30, 144, 255,0.75);
}
.popLink_img{
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
  padding: 15rpx;
}
.popLink_arrow{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 8%;
  margin-top: 15rpx;
}
/* 编辑留言模块 */
.msgBox{
  margin: 50rpx 0 0 5%;
  width: 90%;
}
.msgBox_title{
  font-weight: 800;
  font-size: 32rpx;
  margin: 0 0 20rpx 5%;
}
.msgBox_nav{
  display: inline-flex;
  position: absolute;
  right: 7.5%;
  background: #fff;
  padding: 5rpx 10rpx;
  border-radius: 15rpx;
}
.msgBox_nav text{
  font-size: 25rpx;
  margin-right: 5rpx;
  color: #F0878A;
}
.msgBox_nav image{
  width: 28rpx;
  height: 28rpx;
  margin-top: 4rpx;
}
.sentMsg{
  text-align: center;
  margin: 25rpx 0 50rpx 0;
  font-weight: 800;
  font-size: 28rpx;
  color: #fff;
  background: rgba(240,109,113, 0.8);
  border: 15rpx solid rgba(240,109,113, 0.4);
  border-radius: 25rpx;
  padding: 15rpx 0;
}