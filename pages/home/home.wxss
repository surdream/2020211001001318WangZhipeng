page{
  background: #EFEFEF;
}
swiper{
  width: 92%;
  border-radius: 25rpx;
}
.topWrap{
  width: 100%;
  padding: 20rpx 4%;
}
.swiper-box{
  position: relative;
  border-radius: 25rpx;
  height: 250rpx;
}
.dots{
  width: 92%;
  position: absolute; 
  left: 0; 
  right: 0; 
  bottom: 8rpx; 
  display: flex; 
  justify-content: center; 
} 
.dots .dot{ 
  margin: 0 6rpx; 
  width: 14rpx; 
  height: 14rpx; 
  background: rgba(255, 255, 255, 0.6);
  border-radius: 6rpx; 
  transition: all .8s; 
} 
.dots .dot.active{ 
  width: 32rpx; 
  background: rgba(255, 255, 255, 0.8);
}
 
swiper image {
  width: 100%;
  height: 250rpx;
  border-radius: 25rpx;
}
.notice-box{
  margin-top: 15rpx;
  border-radius: 25rpx;
  width: 92%;
  color: rgba(86,229,190,0.1);
}
.midWrap{
  width: 98%;
  margin-left: 4%;
}
.useful-box{
  text-align: center;
  display: inline-block;
  height: 150rpx;
  width: 120rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.5);
  letter-spacing: 1rpx;
  margin-right: 24rpx;
}
.useful-box image{
  margin: 0 15rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.courseWrap{
  background: #fff;
  width: 92%;
  margin-left: 4%;
  margin-bottom: 20rpx;
  border-radius: 25rpx;
}
.switchBar{
  margin: 0 20rpx 10rpx 40rpx;
  display: inline-flex;
}
.switchBar image{
  position: absolute;
  width: 46rpx;
  height: 46rpx;
}
.msgDot{
  position: absolute;
  background: #F06D71;
  border: 3rpx solid #fff;
  width: 12rpx;
  height: 12rpx;
  margin: -3rpx 0 0 30rpx;
  border-radius: 50%;
}
.msgText{
  color: #F06D71;
}
.switchBar text{
  margin-left: 52rpx;
}
.infoListTitleUnCheck{
  margin-right: 20rpx;
  font-weight: 800;
  font-size: 34rpx;
  color: rgba(0, 0, 0, 0.4);
}
.infoListTitleChecked{
  margin-right: 20rpx;
  font-weight: 800;
  font-size: 34rpx;
}
.infoBox{
  margin: 12rpx;
  border-radius: 25rpx;
  padding: 18rpx 25rpx;
  background: linear-gradient(90deg, var(--background--) 0%,#fff 100%);
}
.infoBox_time{
  position: absolute;
  right: 40rpx;
  margin-top: 24rpx;
  color: rgba(0, 0, 0, 0.6);
}
.infoBox_title{
  font-size: 30rpx;
  display: inline-flex;
  font-weight: 800;
}
.infoBox_detail{
  font-size: 28rpx;
  margin-top: 8rpx;
  color: rgba(0, 0, 0, 0.8);
}
.courseStatus{
  padding: 6rpx 10rpx 0 10rpx;
  font-size: 18rpx;
  border-radius: 25rpx;
  color: rgba(255, 255, 255, 0.8);
  margin: 0 5rpx;
}
.end{
  background: #8283a7;
}
.now{
  background: #2b90d9;
}
.next{
  background: #41D3BD;
}
.remark{
  background: #f9c00c;
}
.viewAll{
  position: absolute;
  right: 48rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
}
.newsWrap{
  background: #fff;
  width: 92%;
  margin-left: 4%;
  border-radius: 25rpx;
}
.newsBox{
  width: 92%;
  margin: 5rpx auto;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.newsBox_title{
  font-size: 28rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.newsBox_detail{
  color: rgba(0, 0, 0, 0.5);
  font-size: 26rpx;
  margin-top: 8rpx;
}
.newsBox text{
  margin-left: 20rpx;
}